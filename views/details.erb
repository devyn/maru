<h1><%== @group.name %></h1>
<h2><%== (pl = Maru::Plugin[@group.kind]) ? pl.human_name : "\"#{@group.kind}\" (missing)" %></h2>

<h3>Status</h3>
<div id="status">
	<div class="complete"><%== @group.jobs( :completed_at.not => nil ).length %></div>
	<div class="processing"><%== (processing = @group.jobs( :worker.not => nil, :completed_at => nil )).length %></div>
	<div class="remaining"><%== remaining = @group.jobs( :worker => nil ).length %></div>
	<div class="estimated-time-left"><%== @group.estimated_time_left %></div>
</div>

<h3>Processing</h3>
<table id="processing-jobs">
	<thead>
		<tr>
			<th>Name</th>
			<th>Worker</th>
		</tr>
	</thead>
	<tbody>
	<% processing.each do |job| %>
		<tr>
			<td><%== job.name %></td>
			<td><%== job.worker.name %></td>
		</tr>
	<% end %>
	</tbody>
</table>
